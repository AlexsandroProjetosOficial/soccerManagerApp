{
  "expo": {
    "name": "soccer_manager",
    "slug": "soccer_manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F470E"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1D521F"
      },
			"userInterfaceStyle": "automatic",
      "package": "com.soccermanager.app",
      "versionCode": 1
    },
		"androidStatusBar": {
      "translucent": true,
      "barStyle": "light-content",
      "backgroundColor": "#0F470E"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
			[
				"expo-font",
				{
					"fonts": ["./assets/fonts/FontsFree-Net-DS-DIGIB-2.ttf"]
				}
			],
			[
        "expo-local-authentication",
        {
          "faceIDPermission": "Permitir $(PRODUCT_NAME) a accessar biometria para salvar credenciais"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}